# EmberLearn Environment Variables
# Copy this to .env and fill in your values

# Required: OpenAI API Key for AI agents
OPENAI_API_KEY=sk-your-api-key-here

# Database (SQLite for local dev)
DATABASE_URL=sqlite:///./emberlearn.db

# Backend API Port
API_PORT=8000

# Frontend will connect to this backend URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional: Dapr (set to false for local dev without Dapr)
USE_DAPR=false
DAPR_HTTP_PORT=3500

# Optional: Kafka (set to false for local dev)
USE_KAFKA=false
